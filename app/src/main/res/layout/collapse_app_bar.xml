<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_home_scan"
        android:layout_width="@dimen/dimen25"
        android:layout_height="@dimen/dimen25"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen20"
        android:src="@drawable/home_mainpager_scanning_selector" />

    <ImageView
        android:id="@+id/iv_home_paycode"
        android:layout_width="@dimen/dimen25"
        android:layout_height="@dimen/dimen25"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen25"
        android:layout_toRightOf="@id/iv_home_scan"
        android:src="@drawable/home_mainpager_paycode_selector" />
</RelativeLayout>
